@model AppLogin.ViewModels.UsuarioVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrarse - Sistema de Reclamos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .auth-wrapper {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .auth-card {
            max-width: 400px;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .auth-header {
            background: transparent;
            border: none;
            text-align: center;
            padding: 2rem 1rem;
        }
        .auth-header img {
            width: 80px;
            height: auto;
            margin-bottom: 1rem;
        }
        .form-control {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
        }
        .form-floating > label {
            padding: 0.75rem 1rem;
        }
        .btn-login {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-weight: 500;
        }
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 1rem 0;
        }
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }
        .divider span {
            padding: 0 1rem;
            color: #6c757d;
            font-size: 0.875rem;
        }
    </style>
</head>
<body class="h-100">
    <div class="auth-wrapper d-flex align-items-center py-5">
        <div class="container">
            <div class="card auth-card mx-auto">
                <div class="auth-header">
                    <img src="~/img/logo.png" alt="Logo" class="mb-4" />
                    <h4 class="mb-0">Crear cuenta</h4>
                    <p class="text-muted">Completa el formulario para registrarte</p>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="nombreCompleto" placeholder="Nombre Completo" required asp-for="NombreCompleto">
                            <label for="nombreCompleto"><i class="bi bi-person me-2"></i>Nombre completo</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="correo" placeholder="nombre@ejemplo.com" required asp-for="Correo">
                            <label for="correo"><i class="bi bi-envelope me-2"></i>Correo electrónico</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="clave" placeholder="Contraseña" required asp-for="Clave">
                            <label for="clave"><i class="bi bi-lock me-2"></i>Contraseña</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="confirmarClave" placeholder="Confirmar Contraseña" required asp-for="ConfirmarClave">
                            <label for="confirmarClave"><i class="bi bi-lock-fill me-2"></i>Confirmar contraseña</label>
                        </div>

                        @if(ViewData["Error"] != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ViewData["Error"]</div>
                            </div>
                        }

                        <button class="btn btn-primary w-100 btn-login mb-4" type="submit">
                            <i class="bi bi-person-plus me-2"></i>Crear cuenta
                        </button>

                        <div class="divider">
                            <span>¿Ya tienes una cuenta?</span>
                        </div>

                        <a asp-controller="Acceso" asp-action="Login" class="btn btn-outline-secondary w-100 btn-login">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar sesión
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>